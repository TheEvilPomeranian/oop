			cout << "Произведение: " << numb1.numerator * numb2.numerator << "/" << numb1.denominator * numb2.denominator << endl;
			break;
		case '/':
			cout << "Деление: " << numb1.numerator * numb2.denominator << "/" << numb1.denominator * numb2.numerator << endl;
			break;
